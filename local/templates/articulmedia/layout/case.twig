{% extends "layout.twig" %}

{% set case = {
  'title': 'всегда<br>отвечай<br>на звонок',
  'summary': 'кампания по продвижению<br>телесериала «Сосны»<br>на канале FOX',
  'date': '2014/02',
  'logo': '../local/templates/articulmedia/img/case/case_logo.jpg',
  'style': {
    'color': '#f3e3cc',
    'background-color': '#1e2532',
    'background-image': '../local/templates/articulmedia/img/case/case_1.jpg',
  },
  'blocks': [
    {
      'type': 'brief',
      'brief': {
        'title': 'БРИФ',
        'content': '<p>«Сосны» – 10-серийный остросюжетный триллер. Действие сериала разворачивается в городе Уэйуорд Пайнз, одно из главных правил которого – всегда отвечать на мистические звонки.</p>
        <h3>Цели кампании:</h3>
        <ul>
          <li>Продвижение сериала «Сосны»</li>
          <li>Увеличение аудитории телеканала FOX</li>
          <li>Увеличение дистрибуции телеканала</li>
          <li>Увеличение подписчиков официальных <br/>групп FOX в социальных сетях</li>
        </ul>',
        'style': {
          'color': '#f3e3cc',
          'background-color': '#1e2532',
          'background-image': '../local/templates/articulmedia/img/case/case_logo.jpg',
        }
      },
      'idea': {
        'title': 'Идея',
        'content': 'погрузить пользователей 
          в атмосферу сериала, дав возможность почувствовать 
          себя на месте жителей мистического города, 
          и с замиранием сердца 
          ожидать таинственного 
          звонка на свой телефон.',
        'style': {
          'color': '#000000',
          'background-color': '#f3e3cc',
          'background-image': '../local/templates/articulmedia/img/case/case_2.jpg',
        }
      },
    }
  ],
} %}


{% block main %}
<section class="case-announce case-block">
  <div class="case-block__container">
    <h3 class="case-announce__title">[[case.title | raw]]</h3>
    <p class="case-announce__summary">
      [[case.content | raw]]
    </p>
    <div class="case-announce__about-block about-block">
      <div class="about-block__item about-block__item--client" style="background-image: url('[[case.logo]]');">
        <span class="about-block__title">клиент</span>
      </div>
      <div class="about-block__item about-block__item--date">
        <span class="about-block__title">релиз</span>
        <span class="about-block__date">[[case.date]]</span>
      </div>
      <div class="about-block__item about-block__item--project">
        <span class="about-block__title">о проекте</span>
      </div>
    </div>
  </div>
</section>

{% for block in case.blocks %}
  {% if block.type == 'brief' %}
    <section class="case-brief case-block">
      <div class="case-block__container">
        <div class="brief">
          <h2 class="brief__title">
            БРИФ
          </h2>
          <p class="brief__text">
            [[case.brief | raw]]
          </p>
        </div>
        <div class="idea">
          <h2 class="idea__title">
            идея
          </h2>
          <p class="idea__text">
            погрузить пользователей 
            в атмосферу сериала, дав возможность почувствовать 
            себя на месте жителей мистического города, 
            и с замиранием сердца 
            ожидать таинственного 
            звонка на свой телефон. 
          </p>
        </div>
      </div>
    </section>
  {% elseif block.type == 'brief' %}
  {% endif %}
{% endfor %}

<section class="case-3">
  <div class="container">
    
  </div>
</section>

{% endblock %}
